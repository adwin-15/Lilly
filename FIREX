

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $eviral_REPO == "LIILY" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RlYW1ldmlyYWwvRklSRVhVU0VSQk9UL2FyY2hpdmUvcmVmcy9oZWFkcy9tYWluLnppcA==" | base64 -d
    elif [[ $eviral_REPO == "LILLY" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RlYW1ldmlyYWwvRklSRVhVU0VSQk9UL2FyY2hpdmUvcmVmcy9oZWFkcy9tYWluLnppcA==" | base64 -d
    elif [[ $eviral_REPO =~ $regex ]]
    then
        if [[ $eviral_REPO_BRANCH ]]
        then
            echo "${eviral_REPO}/archive/${eviral_REPO_BRANCH}.zip"
        else
            echo "${eviral_REPO}/archive/main.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RlYW1ldmlyYWwvRklSRVhVU0VSQk9UL2FyY2hpdmUvcmVmcy9oZWFkcy9tYWluLnppcA==" | base64 -d
    fi
}


_setting_bot () {
    local zippath
    zippath="LILLY.zip"
    echo "  Downloading LILLY V3.O Source Code..."
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data ..."
    eviralPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo "  LILLY V3.O Cleaning.."
    rm -rf "$zippath"
    sleep 5
    cd $eviralPATH
    echo "    ⚜️Starting LILLY⚜️     "
    echo "
    🇮🇳🇮🇳🇮🇳🇮🇳🇮🇳🇮🇳🇮🇳🇮🇳🇮🇳🇮🇳
    "

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_setting_bot
